<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:text="Pertukaran Nilai Mata Uang"
        android:textSize="24sp" />

    <RadioGroup
        android:id="@+id/RadioGroup1"
        android:layout_width="301dp"
        android:layout_height="247dp"

        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="12dp"
        android:layout_marginTop="32dp"

        android:layout_weight="0.86"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editRupiah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Silahkan Masukkan Mata Uang Rupiah"
            android:inputType="textPersonName" />

        <RadioButton
            android:id="@+id/radioEuro"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_below="@+id/rdb4"
            android:layout_alignStart="@+id/RadioGroup1"
            android:checked="false"
            android:text="Euro" />

        <RadioButton
            android:id="@+id/radioDolar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_alignStart="@+id/RadioGroup1"
            android:checked="false"
            android:text="Dolar" />

        <Button
            android:id="@+id/btnOkKonversi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OK" />

        <TextView
            android:id="@+id/txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hasil :"
            android:textSize="18sp" />

    </RadioGroup>

    <TextView
        android:id="@+id/txtHasil"
        android:layout_width="303dp"
        android:layout_height="54dp"
        android:layout_alignStart="@+id/RadioGroup1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp" />

</RelativeLayout>